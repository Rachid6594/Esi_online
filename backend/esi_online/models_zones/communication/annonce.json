{
  "model_name": "Annonce",
  "app_name": "communication",
  "fields": {
    "titre": { "type": "char", "max_length": 300 },
    "contenu": { "type": "text" },
    "categorie": { "type": "char", "max_length": 20, "default": "INFORMATION" },
    "fichier_joint": { "type": "char", "max_length": 500, "blank": true, "null": true },
    "destinataires_tous": { "type": "bool", "default": false },
    "destinataires_roles": { "type": "char", "max_length": 200, "blank": true, "null": true },
    "statut": { "type": "char", "max_length": 15, "default": "BROUILLON" },
    "date_publication": { "type": "datetime", "blank": true, "null": true },
    "date_expiration": { "type": "datetime", "blank": true, "null": true },
    "auteur": { "type": "fk", "to": "authentification.User", "related_name": "annonces_creees", "on_delete": "CASCADE" },
    "envoi_email": { "type": "bool", "default": true },
    "envoi_notification": { "type": "bool", "default": true },
    "affichage_tableau": { "type": "bool", "default": true }
  },
  "meta": {
    "db_table": "annonces",
    "verbose_name": "Annonce",
    "verbose_name_plural": "Annonces"
  }
}
