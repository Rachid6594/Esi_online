# ESI-Online Backend - Variables d'environnement
# Copier ce fichier en .env et adapter les valeurs (ne pas commiter .env)

# Sécurité
SECRET_KEY=votre-secret-key-django-tres-long-et-aleatoire

# Environnement
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Base de données PostgreSQL
DB_NAME=esi_online
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=127.0.0.1
DB_PORT=5432

# Internationalisation
LANGUAGE_CODE=fr-fr
TIME_ZONE=Africa/Algiers

# CORS (en prod, mettre False et renseigner CORS_ALLOWED_ORIGINS)
CORS_ALLOW_ALL_ORIGINS=True

